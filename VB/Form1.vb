		Private Sub gridView1_CustomDrawFooter(ByVal sender As Object, ByVal e As DevExpress.XtraGrid.Views.Base.RowObjectCustomDrawEventArgs) Handles gridView1.CustomDrawFooter
			e.Painter.DrawObject(e.Info)
			Dim view As GridView = TryCast(sender, GridView)
			Dim gvi As GridViewInfo = TryCast(view.GetViewInfo(), GridViewInfo)

			Dim info As New DevExpress.Utils.Drawing.FooterCellInfoArgs(e.Cache)
			info.Appearance.Assign(view.PaintAppearance.FooterPanel)
			Dim rect As New Rectangle(e.Bounds.X, e.Bounds.Y, view.IndicatorWidth, e.Bounds.Height)
			rect.Inflate(-3, -3)
			info.Bounds = rect
			info.DisplayText = String.Format("{0}", view.DataRowCount)
			gvi.Painter.ElementsPainter.FooterCell.DrawObject(info)

			e.Handled = True
		End Sub
